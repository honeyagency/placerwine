<section class="section--winery-filter margin--top-2  margin--bot-2">

	<form id="wineryfilter" action="{{site.url}}/explore-our-wineries/?filter=varietal_id" method="get" accept-charset="utf-8">
		<select name="varietal_id" id="varietal_id" class="grid--sm-third icon-angle-down" >
			{% if currentFilter != null %}
				<option>{{currentFilter}}</option>
			{% else %}
				<option>Filter by varietal</option>
			{% endif %}
			{% for varietal in varietals %}
				<option value="{{varietal.term_id}}">{{varietal.name}}</option>
			{% endfor %}
		</select>
		<input type="submit" name="" class="font--large" value="Search">
	</form>
	<div class="block--day-filter font--large flex flex--wrap justify--between spacing--vert-1">
		<strong>Days open:</strong>
		<a class="color--black" href="?date_id=monday">Monday</a><span class="hidden--mob spacing--horiz-half">|</span>
		<a class="color--black" href="?date_id=tuesday">Tuesday</a><span class="hidden--mob spacing--horiz-half">|</span>
		<a class="color--black" href="?date_id=wednesday">Wednesday</a><span class="hidden--mob spacing--horiz-half">|</span>
		<a class="color--black" href="?date_id=thursday">Thursday</a><span class="hidden--mob spacing--horiz-half">|</span>
		<a class="color--black" href="?date_id=friday">Friday</a><span class="hidden--mob spacing--horiz-half">|</span>
		<a class="color--black" href="?date_id=saturday">Saturday</a><span class="hidden--mob spacing--horiz-half">|</span>
		<a class="color--black" href="?date_id=sunday">Sunday</a>
	</div>
	{# <div style="column-count:3;" class="text--center shortlist ">
{% for winery in wineries %}
<a href="{{winery.link}}" class="color--brown-dark font--large block">{{winery.title}}</a>
{% endfor %}
	</div>
	<a class="text--right color--brown-dark font--smaller text--uppercase block" id="wineryuitoggle" data-shorttext="Winery Quick Search" data-longtext="Close" href="">Winery Quick Search</a> #}
</section>
