<section class="section--home-explore flex flex--wrap justify--end align--items-start">
	<img src="{{home.explore.image}}" class="grid--one">
	<div class="block--home-explore-text bg--brown-light grid--three-fourths grid--sm-half grid--md-third spacing--horiz-2 spacing--vert-2">
	{% if home.explore.title %}<h2>{{home.explore.title}}</h2>{% endif %}
	{% if home.explore.link %}<a class="font--large font--bold" href="{{home.explore.link.url}}" title="{{home.explore.link.title}}" target="{{home.explore.link.target}}">{{home.explore.link.title}}</a>{% endif %}
	</div>
</section>