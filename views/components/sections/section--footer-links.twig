<section class="section--footer-links max-wrap margin--center spacing--gutter">
	<span>
	<i class="icon-i80" data-grunticon-embed></i>
	{% if options.social.facebook %}<a href="{{options.social.facebook.url}}" target="{{options.social.facebook.target}}" title="{{options.social.facebook.title}}"><i class="icon-social--facebook footer-social" data-grunticon-embed></i></a>{% endif %}
		{% if options.social.twitter %}<a href="{{options.social.twitter.url}}" target="{{options.social.twitter.target}}" title="{{options.social.twitter.title}}"><i class="icon-social--twitter footer-social" data-grunticon-embed></i></a>{% endif %}
		</span>
	<nav role="navigation">
		<ul class="flex flex--wrap justify--center">
			{% for item in footermenu.get_items %}
				<li class="nav-item {{item.classes | join(' ')}}">
					<a class="nav-link color--blue font--large font--bold" href="{{item.get_link}}">{{item.title}}</a>
					{% if item.get_children %}
						<ul class="nav nav-drop">
							{% for child in item.get_children %}
								<li class="nav-drop-item inline--block">
									<a class="nav-link color--red font--large font--bold" href="{{child.get_link}}">{{child.title}}</a>
									{% if not loop.last %}|{% endif %}
								</li>
							{% endfor %}
						</ul>
					{% endif %}
				</li>
			{% endfor %}
		</ul>
	</nav>
</section>