<nav role="navigation" class="text--center">
	<ul class="flex flex--wrap justify--center">
		{% for item in menu.get_items %}
			<li class="nav-item {{item.classes | join(' ')}} grid--one grid--sm-third">
				{% set navtext = item.title|split(' ') %}
				<a class="nav-link color--blue font--bold font--large" href="{{item.get_link}}">
					{% for text in navtext %}
						{% if loop.last %}<br><span class="font--larger">{{text}}</span>{% else %}{{text}}{% endif %}
					{% endfor %}
				</a>
				{% if item.get_children %}
					<ul class="nav nav-drop">
						{% for child in item.get_children %}
							<li class="nav-drop-item">
								<a class="nav-link" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
</nav>