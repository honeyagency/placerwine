<nav role="navigation" class="text--center main-nav grid--half align--items-end spacing--vert-1">
	<ul class="flex flex--wrap justify--center mar--no align--items-center">
		{% for item in menu.get_items %}
			<li class="nav-item {{item.classes | join(' ')}} ">
				<a class="nav-link color--blue font--bold font--large" href="{{item.get_link}}">{{item.title}}</a>
				{% if item.get_children %}
					<ul class="nav nav-drop mar--no">
						{% for child in item.get_children %}
							<li class="nav-drop-item bg--brown-light">
								<a class="nav-link color--black font--bold font--large" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				{% endif %}
			</li>
			{% if loop.last %}{% else %}<span>|</span>{% endif %}
		{% endfor %}
	</ul>
</nav>