{# Title #}
{% if post.slug == 'home' %}
	{% set metaTitle = site.name %}
{% elseif wp_title %}
	{% set metaTitle = wp_title %}
{% else %}
	{% set metaTitle = site.name %}
{% endif %}
{# Description #}
{% if post.slug == 'home' %}
	{% set metaDescription = site.description %}
{% elseif post.post_type == 'winery' %}
	{% set metaDescription = winery.content.description %}
{% elseif post.content %}
	{% set metaDescription = post.content|striptags|excerpt(100) %}
{% else %}
	{% set metaDescription = post.post_excerpt %}
{% endif %}
{% if post.slug == 'home' %}
	{% set metaImage = options.image %}
{% elseif post.get_thumbnail.src != '' %}
	{% set metaImage = post.get_thumbnail.src %}
{% endif %}

<meta charset="{{site.charset}}" />
<title>{% if post.slug == 'home' %}{% else %}{{site.title}} - {% endif %}{{metaTitle}}</title>
<meta name="description" content="{{metaDescription}}">
<meta property="og:title" content="{% if post.slug == 'home' %}{% else %}{{site.title}} - {% endif %}{{metaTitle}}">
<meta property="og:description" content="{{metaDescription}}">
<meta property="og:image" content="{{metaImage}}">
<meta property="og:url" content="{{post.link}}">
<meta name="twitter:card" content="summary_large_image">
<meta name="og:site_name" content="{{site.name}}">