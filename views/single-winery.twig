{% extends "base.twig" %}
{% block content %}
{% if post.thumbnail %}<section class="section--single-header spacing--gutter-dsk margin--center max-wrap"><img src="{{post.thumbnail}}" width="100%"></section><div class="max-wrap margin--center spacing--gutter margin--horiz-1">{% include 'components/blocks/block--breadcrumbs.twig' %}</div>{% else %}<section class="section--single-header spacing--gutter spacing--vert-1 spacing--dsk-vert-2 bg--brown-faded margin--center max-wrap">{% include 'components/blocks/block--breadcrumbs.twig' %}</section>{% endif %}

<article class="flex flex--wrap justify--between align--items-start spacing--dsk-vert-4 winery-wrap margin--center spacing--gutter">
	{% include 'components/sections/section--winery-aside.twig' %}
	{% include 'components/sections/section--winery-content.twig' %}
</article>
<aside class="section--winery-awards-deets spacing--gutter winery-wrap margin--center spacing--vert-1 spacing--dsk-vert-0">
	{% if winery.deets.amenities %}{% include 'components/sections/section--winery-amenities.twig' %}{% endif %}
	{% if winery.deets.press %}{% include 'components/sections/section--winery-press.twig' %}{% endif %}
	{% if winery.deets.awards %}{% include 'components/sections/section--winery-awards.twig' %}{% endif %}
</aside>
{% endblock %}